<div class="relative px-6 pt-12 pb-32 mx-auto w-100 sm:max-w-2xl md:max-w-3xl md:px-12 lg:max-w-5xl xl:max-w-7xl xl:px-32 md:pt-32">
	<div class="block rounded-lg bg-teal-800 bg-opacity-90 px-6  shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]  md:py-4 md:px-12">
		<div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
			<h2 class="mb-10 text-5xl font-bold text-center text-amber-400">
				{% if user %}
					Modifier les informations
				{% else %}
					Création de compte
				{% endif %}
			</h2>
			<form method="POST" {% if user %} action="/updateUser/{{user.id}}" {% else %} action="/register" {% endif %} enctype="multipart/form-data">
				<div class="grid gap-4 mb-4 md:grid-cols-2 md:gap-6 md:mb-5 ">

					<div class="relative w-full">
						<label for="name" class="block mb-2 text-sm font-medium text-left text-teal-50">Nom</label>
						<input type="text" name="name" id="name" class="{% if errors.name %} ring-2 ring-red-500 bg-red-100 {% else %} bg-teal-50 {% endif %} border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-teal-700 block w-full p-2.5 transition-all" value="{{post.name}}" {% if user %} value="{{user.name}}" {% endif %} placeholder="Nom" required="">
						{% if errors.name %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10 ">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.name}}</p>
						{% endif %}
					</div>

					<div class="relative w-full">
						<label for="firstname" class="block mb-2 text-sm font-medium text-left text-teal-50 ">Prénom</label>
						<input type="text" name="firstname" id="firstname" class="{% if errors.firstname %} ring-2 ring-red-500 bg-red-100 {% else %} bg-teal-50 {% endif %} border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-teal-700 block w-full p-2.5 transition-all" value="{{post.firstname}}" {% if user %} value="{{user.siret}}" {% endif %} placeholder="Prénom" required="">
						{% if errors.firstname %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.firstname}}</p>
						{% endif %}
					</div>

					<div class="relative col-span-1 md:col-span-2">
						<label class="block mb-2 text-sm text-left text-teal-50">Photo de profil
						</label>
						<input name="photo" type="file" class="block w-full text-sm transition-all text-teal-50 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-amber-400 file:test-gray-800 hover:file:bg-yellow-400"/>
						{% if errors.fileError %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.fileError}}</p>
						{% endif %}
					</div>

					<div class="relative md:col-span-2">
						<label for="email" class="block mb-2 text-sm font-medium text-left text-teal-50 ">Email</label>
						<input type="text" name="email" id="email" class="{% if errors.email or errors.mailSign %} ring-2 ring-red-500 bg-red-100 {% else %} bg-gray-50 {% endif %} border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-teal-700 transition-all block w-full p-2.5 " value="{{post.email}}" {% if user %} value="{{user.mail}}" {% else %} required="" {% endif %} placeholder="@">
						{% if errors.mailSign or errors.email %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.mailSign}}</p>
							<p class="mt-2 text-red-500">{{errors.email}}</p>
						{% endif %}


					</div>

					<div class="relative w-full">
						<label for="password" class="block mb-2 text-sm font-medium text-left text-teal-50 ">Mot de passe</label>
						<input type="password" name="password" id="password" class="{% if errors.password %} ring-2 ring-red-500 bg-red-100 {% else %} bg-gray-50 {% endif %} border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-teal-700 transition-all block w-full p-2.5" value="{{post.password}}" placeholder="Mot de passe" required="">
						{% if errors.password %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.password}}</p>
						{% endif %}
					</div>

					<div class="relative w-full">
						<label for="confirmPassword" class="block mb-2 text-sm font-medium text-left text-teal-50 ">Confirmer le mot de passe</label>
						<input type="password" name="confirmPassword" id="confirmPassword" class="{% if errors.confirmPassword %} ring-2 ring-red-500 bg-red-100 {% else %} border-gray-300 bg-gray-50 {% endif %} border border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-teal-700 transition-all block w-full p-2.5 " value="{{post.confirmPassword}}" placeholder="Confirmer le mot de passe" required="">
						{% if errors.confirmPassword %}
							<div class="absolute right-0 flex items-center pr-3 pointer-events-none top-10">
								<svg class="w-5 h-5 text-red-500" width="16" height="16" fill="currentColor" viewbox="0 0 16 16" aria-hidden="true">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
								</svg>
							</div>
							<p class="mt-2 text-red-500">{{errors.confirmPassword}}</p>
						{% endif %}
					</div>


					<div class="col-span-1 text-center md:col-span-2">
						<button type="submit" class="text-gray-800 bg-amber-400 hover:bg-yellow-400 focus:ring-4 focus:outline-none   shadow-lg shadow-amber-500/50  font-medium rounded-md text-lg px-5 py-2.5 text-center mr-2 mb-2 transition-all">
							{% if user %}
								Mettre à jour
							{% else %}
								Valider
							{% endif %}
						</button>
					</div>
				</div>
				<p class="text-sm font-light text-center text-teal-50">
					Vous avez déjà un compte?
					<a href="/login" class="font-medium text-amber-400 hover:underline ">Connexion</a>
				</p>
			</form>
		</div>
	</div>
</div>
